<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wq.website.dao.UserMapper">

    <resultMap id="UserMap" type="com.wq.website.modal.Vo.UserVo">
        <id column="uid" property="uid"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="home_url" property="homeUrl"/>
        <result column="screen_name" property="screenName"/>
        <result column="created" property="created"/>
        <result column="activated" property="activated"/>
        <result column="logged" property="logged"/>
        <result column="group_name" property="groupName"/>
    </resultMap>

    <select id="findByName" resultType="com.wq.website.modal.Vo.UserVo" parameterType="String">
        SELECT *
        FROM t_users
        WHERE username = #{name};
    </select>

    <insert id="insertUserVo" parameterType="com.wq.website.modal.Vo.UserVo" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO t_users (username, password, email, home_url, screen_name, created, activated, logged, group_name)
        VALUES (#{username}, #{password}, #{email}, #{homeUrl}, #{screenName}, #{created}, #{activated},
                #{logged}, #{groupName});
    </insert>

    <select id="findByUid" resultType="com.wq.website.modal.Vo.UserVo" parameterType="Integer">
        SELECT *
        FROM t_users
        WHERE uid = #{uid};
    </select>

</mapper>